@model IEnumerable<Shoppy.Models.ApplicationType>

<dib class="container p-3">
    <div class = "row pt-4">
        <div class="col-6">
            <h2 class=" text-primary">Список application </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-edit"></i>  Создать Application Type
            </a>
        </div>

        <br />  <br />

        @if(Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="wight100%">
                <thead>
                    
                    <td>
                        Name
                    </td>

                    <th> </th>
                </thead>
                <tbody>
                    @foreach(var obj in Model)
                    {
                        <tr>
                            <td wight="50%">@obj.Name</td>
                                    <td class="text-center">
                                    <a asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                            <i class="fas fa-edit"></i> 
                                        </a>
                                    <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                                <i class="fas fa-trash-alt"></i> 
                                            </a>
                                        
                                </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No application type exists</p>
        }
    </div>

